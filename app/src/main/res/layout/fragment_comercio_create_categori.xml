<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.comercio.ComercioCreateCategoriFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/imageview_category"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_image"
            android:background="@color/gris" />

        <EditText
            android:id="@+id/edittext_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de la categorÃ­a"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/edittext_custom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:inputType="text" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_createcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR CATEGORIA"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_buttom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="65dp"
        app:backgroundTint="#06515A"
        android:textColor="@color/celeste"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>