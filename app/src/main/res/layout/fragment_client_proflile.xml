<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.client.ClientProflileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimage_user_fragment"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user_icon"
            app:civ_border_color="@color/gris"
            app:civ_border_width="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            app:civ_circle_background_color="@color/gris"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_pin_gray"
                />
            <TextView
                android:id="@+id/txvnameclient_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email_gray"
                />
            <TextView
                android:id="@+id/txv_email_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección email:"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone_gray"
                />
            <TextView
                android:id="@+id/txvphone_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+54 00000000"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="bottom"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="55dp">

       <Button
           android:id="@+id/btn_select_rol"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SELECCIONAR ROL"
           android:layout_gravity="center"
           android:background="@drawable/rounded_buttom"
           app:backgroundTint="#CAC7C7"
           android:textColor="@color/black"
           />

       <Button
           android:id="@+id/btn_update_profile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Editar Perfil"
           android:layout_gravity="center"
           android:background="@drawable/rounded_buttom"
           android:layout_marginBottom="15dp"
           android:layout_marginTop="10dp"/>

       <Button
           android:id="@+id/imgview_logout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Cerrar Sesión"
           android:textColor="@color/black"
           app:backgroundTint="#FA2121"
           android:layout_gravity="center"
           android:background="@drawable/rounded_buttom"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="15dp"/>


   </LinearLayout>
       





</androidx.coordinatorlayout.widget.CoordinatorLayout>